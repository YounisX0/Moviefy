<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="../css/adminstyle.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <title>Admin Panel</title>
</head>
<body>
  <section id="sidebar">
    <a href="#" class="brand">
      <i class='bx bxl-medium-square'></i>
      <span class="icon">Admin Dashboard</span>
    </a>
    <ul class="side-menu top">
      <li>
        <a href="/admin">
          <i class='bx bxs-dashboard' style='color:#ffffff'></i>
          <span class="text">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/movies/add">
          <i class='bx bxs-movie'></i>
          <span class="text">Add Movie</span>
        </a>
      </li>
      <li>
        <a href="/users/add">
          <i class='bx bxs-user-plus'></i>
          <span class="text">Add User</span>
        </a>
      </li>
      <li>
        <a href="../html/index.html">
          <i class='bx bx-log-out' style='color:#ffffff'></i>
          <span class="text">Log out</span>
        </a>
      </li>
    </ul>
  </section>
  <section id="content">
    <nav class="navbar">
      <i class='bx bx-menu' style='color:#ffffff'></i>
      <a href="#" class="nav-link">Categories</a>
      <form action="#">
        <div class="form-input">
          <input type="search" placeholder="Search...">
          <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
        </div>
      </form>
      <a href="" class="notification">
        <i class='bx bxs-bell'></i>
        <span class="num">8</span>
      </a>
      <a href="#">
        <img src="" alt="">
      </a>
    </nav>
    <main>
      <div class="head-title">
        <div class="left">
          <h1>Dashboard</h1>
          <ul class="breadcrumb">
            <li>
              <a class href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
              <a href="#">Home</a>
            </li>
          </ul>
        </div>
      </div>
      <ul class="box-info">
        <li>
          <i class='bx bx-user' style='color:#ffffff'></i>
          <span class="text">
            <h3><%= users.length %></h3>
            <p>Users</p>
          </span>
        </li>
        <li>
          <i class='bx bx-camera-movie'></i>
          <span class="text">
            <h3><%= movies.length %></h3>
            <p>Movies</p>
          </span>
        </li>
        <li>
          <i class='bx bx-group'></i>
          <span class="text">
            <h3>4</h3>
            <p>Team Members</p>
          </span>
        </li>
      </ul>
      <div class="table-data">
        <div class="order">
          <div class="head">
            <h3>Movies List</h3>
            <box-icon name='search'></box-icon>
          </div>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% movies.forEach(movie => { %>
                <tr id="movie-<%= movie._id %>">
                  <td><%= movie.title %></td>
                  <td><%= movie.director %></td>
                  <td class="year-column"><%= movie.year %></td>
                  <td><%= movie.genre %></td>
                  <td>
                    <a href="/movies/<%= movie._id %>/edit" class="btn edit-movie-btn"><i class='bx bxs-edit-alt'></i></a>
                    <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" style="display:inline;">
                      <button class="btn delete-movie-btn" type="submit"><i class='bx bxs-minus-circle'></i></button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <div class="todo">
          <div class="head">
            <h3>Users List</h3>
          </div>
          <ul class="todo-list">
            <% users.forEach(user => { %>
              <li>
                <div class="user-details">
                  <p><%= user.name %></p>
                  <p><%= user.email %></p>
                </div>
                <a href="/users/<%= user._id %>/edit" class="btn edit-user-btn"><i class='bx bxs-edit-alt'></i></a>
                <form action="/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button class="btn" type="submit"><i class='bx bxs-minus-circle'></i></button>
                </form>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </main>
  </section>
  <script src="/js/admin.js"></script>
  <script>
    document.querySelectorAll('.delete-user-form').forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const userId = form.dataset.id;
  
        try {
          const response = await fetch(`/users/${userId}?_method=DELETE`, {
            method: 'POST',
          });
  
          if (response.ok) {
            const data = await response.json();
            document.getElementById(`user-${userId}`).remove();
            Swal.fire({
              title: 'Success!',
              text: `User with id ${userId} has been removed.`,
              icon: 'success',
              confirmButtonText: 'OK'
            });
          } else {
            const errorData = await response.json();
            Swal.fire({
              title: 'Error!',
              text: errorData.message,
              icon: 'error',
              confirmButtonText: 'OK'
            });
          }
        } catch (error) {
          Swal.fire({
            title: 'Error!',
            text: 'There was an issue removing the user.',
            icon: 'error',
            confirmButtonText: 'OK'
          });
        }
      });
    });
  </script>
</body>
</html>
