<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="../css/adminstyle.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <title>Admin Panel</title>
</head>
<body>
  <section id="sidebar">
    <a href="#" class="brand">
      <i class='bx bxl-medium-square'></i>
      <span class="icon">Admin Dashboard</span>
    </a>
    <ul class="side-menu top">
      <li>
        <a href="#">
          <i class='bx bxs-dashboard' style='color:#ffffff' ></i>
          <span class="text">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="../html/index.html">
          <i class='bx bx-log-out' style='color:#ffffff' ></i>
          <span class="text">Log out</span>
        </a>
      </li>
    </ul>
  </section>
  <section id="content">
    <nav class="navbar">
      <i class='bx bx-menu' style='color:#ffffff' ></i>
      <a href="#" class="nav-link">Categories</a>
      <form action="#">
        <div class="form-input">
          <input type="search" placeholder="Search...">
          <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
        </div>
      </form>
      <a href="" class="notification">
        <i class='bx bxs-bell'></i>
        <span class="num">8</span>
      </a>
      <a href="#">
        <img src="" alt="">
      </a>
    </nav>
    <main>
      <div class="head-title">
        <div class="left">
          <h1>Dashboard</h1>
          <ul class="breadcrumb">
            <li>
              <a class href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
              <a href="#">Home</a>
            </li>
          </ul>
        </div>
      </div>
      <ul class="box-info">
        <li>
          <i class='bx bx-user' style='color:#ffffff' ></i>
          <span class="text">
            <h3><%= users.length %></h3>
            <p>Users</p>
          </span>
        </li>
        <li>
          <i class='bx bx-camera-movie'></i>
          <span class="text">
            <h3><%= movies.length %></h3>
            <p>Movies</p>
          </span>
        </li>
        <li>
          <i class='bx bx-group'></i>
          <span class="text">
            <h3>4</h3>
            <p>Team</p>
          </span>
        </li>
      </ul>
      <div class="table-data">
        <div class="order">
          <div class="head">
            <h3>Movies List</h3>
            <box-icon name='search'></box-icon>
            <i class='bx bx-plus'></i>
            <i class='bx bx-filter' style='color:#ffffff' ></i>
          </div>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% movies.forEach(movie => { %>
                <tr>
                  <td><%= movie.title %></td>
                  <td><%= movie.director %></td>
                  <td><%= movie.year %></td>
                  <td><%= movie.genre %></td>
                  <td> 
                    <button>Edit</button>
                    <button>Delete</button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <div class="todo">
          <div class="head">
            <h3>Users List</h3>
            <i class='bx bx-plus'></i>
            <i class='bx bx-filter' style='color:#ffffff' ></i>
          </div>
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td>
                    <button>Edit</button>
                    <button>Delete</button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </section>
 <script src="../javascript/admin.js"></script>
</body>
</html>
